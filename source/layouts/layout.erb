        <!--  <ul class="footer-menu">-->
        <!--    <li>-->
        <!--      <%= link_to "контакты", '/contacts.html' %>-->
        <!--    </li>-->
        <!--    <li>-->
        <!--      <%= link_to "о нас", '/about.html' %>-->
        <!--    </li>-->
        <!--  </ul>-->
        <!--</div>-->
        <div class="sixths-footer-column">
          <p>+7 495 <span class="main-phone">784 1416</span></p>
          <p class="gravpix">by <%= link_to "Gravpix", 'http://gravpix.net/', target: "_blank" %></p>
        </div>
      </div>
    </footer>
    
  </body>
</html>