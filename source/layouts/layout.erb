    <link rel="icon" type="image/png" href="../images/favicon.png" />
    
  </head>

  <body class="<%= page_classes %>">
    
    
      <header>
        <div class="header-container">
          <a href="../index.html">
            <%= image_tag "logo.png" %>
          </a>
          <div class="main-contacts">
            <p>Москва, ул. Муромская д. 1 <%= image_tag "locate.png"  %></p>
            <p>+7 495 <span class="main-phone">784 1416</span><%= image_tag "phone.png" %></p>
            <a href="https://www.instagram.com/sc_grand/" target=blank class="vk-link-up"></a>
            <a href="https://new.vk.com/public119759887" target=blank class="insta-link-up"></a>
          </div>
        </div>
      </header>
      
      <div class="main-menu">
        <div class="container">
          <div class="menu">
            <div class="menu-item">
              <a href="index.html"></a>
            </div>
            <div class="menu-item dropdown">
              <a href="about.html">О нас</a>
              <div class="dropdown-content">
                <%= link_to "Новости", '/news.html' %>
                <%= link_to "Тренеры", '/trainers.html' %>
                <%= link_to "Документы", '/documents.html' %>
