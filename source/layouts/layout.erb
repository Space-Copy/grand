            </li>
            <!--<li>-->
            <!--  <%= link_to "фотогалерея", '/gallery.html' %>-->
            <!--</li>-->
            <li>
              <%= link_to "контакты", '/contacts.html' %>
            </li>
            <li>
              <%= link_to "о нас", '/about.html' %>
            </li>
          </ul>
        </div>
